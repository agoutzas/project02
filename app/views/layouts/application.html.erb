<!DOCTYPE html>
<html>
  <head>
    <title>MWNS Student Resources</title>

    <%= csp_meta_tag %>
    <%= csrf_meta_tags %>
    <%= cloudinary_js_config %>



    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>



  </head>

  <body>
    <div class = "container" style = "padding-top:20px;">
      <nav>

        <%= link_to "Home", root_path %>
        |
        <% if @current_user.present? %>
        <%= link_to "logout",login_path, :method=> 'delete' %>
        |
          <% if @current_user.teacher? %>
          <%= link_to "Upload Resources", new_resource_path %>
        |
          <%= link_to "View Resources", resources_path %>
        <% else %>
        <%= link_to "New Folder", new_folder_path %>
        |
        <%= link_to "View Folders", folders_path %>
        <% end %>
        <% else %>
        <%= link_to "Sign Up", new_user_path %>
        |
        <%= link_to "Log in", login_path %>
        <% end %>

      </nav>

      <%= yield %>

      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    </div>


  </body>

</html>
